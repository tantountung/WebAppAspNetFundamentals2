
@model CreatePersonViewModel

<h1>Adding People</h1>

<form asp-action="Create" asp-controller="People" method="post">
    <label asp-for="Name"></label>
    <input asp-for="Name" />

    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber"></span>

    <label asp-for="CityName"></label>
    <select asp-for="CityName">

        <option value="">No City</option>

        @foreach (var item in Model.CityList)
        {
            <option value="@item.Id">@item.CityName</option>
        }

    </select>

    <span asp-validation-for="CityName"></span>

    <label asp-for="CountryName"></label>
    <select asp-for="CountryName">

        <option value="">No Country</option>

        @foreach (var item in Model.CountryList)
        {
            <option value="@item.Id">@item.CountryName</option>
        }

    </select>

    <span asp-validation-for="CountryName"></span>

    <button>Create</button>
    <button type="reset">Reset</button>

</form>
