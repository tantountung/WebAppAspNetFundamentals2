@model CreateLanguage
@{
    ViewData["Title"] = "Create";
}

<h4>Create Language</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LanguangeName" class="control-label"></label>
                <input asp-for="LanguangeName" class="form-control" />
                <span asp-validation-for="LanguangeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
